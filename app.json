{
  "expo": {
    "name": "Nox",
    "slug": "nox",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Android.png",
    "scheme": "nox",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.noxchat.app",
      "icon": "./assets/images/Android.png",
      "associatedDomains": [
        "applinks:noxchat.xyz",
        "applinks:www.noxchat.xyz"
      ],
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false,
          "NSExceptionDomains": {
            "noxchat.xyz": {
              "NSExceptionAllowsInsecureHTTPLoads": false,
              "NSExceptionRequiresForwardSecrecy": true,
              "NSIncludesSubdomains": true,
              "NSExceptionMinimumTLSVersion": "TLSv1.2"
            }
          }
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0B0F0D",
        "foregroundImage": "./assets/images/Android.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.noxchat.app",
      "allowBackup": false,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "noxchat.xyz",
              "pathPrefix": "/groups/invite"
            },
            {
              "scheme": "https",
              "host": "www.noxchat.xyz",
              "pathPrefix": "/groups/invite"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "blockedPermissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_CONTACTS",
        "android.permission.WRITE_CONTACTS",
        "android.permission.READ_CALL_LOG",
        "android.permission.WRITE_CALL_LOG",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0B0F0D"
        }
      ],
      [
        "expo-secure-store",
        {
          "faceIDPermission": "Allow Nox to access your Face ID for secure authentication."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "72361c25-d3e6-4fc0-b012-ac2685914284"
      }
    }
  }
}
